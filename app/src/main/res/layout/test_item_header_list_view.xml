<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/view_bg_padding"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="#f00"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_book_meta_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_3"
            app:contentPadding="@dimen/dp_10">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_book_meta_data_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_8"
                    android:maxLines="3"
                    android:text="诗经"
                    android:textColor="@color/bookshelf_title_text_color"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="诗经"/>

                <TextView
                    android:id="@+id/tv_book_meta_data_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="内容简介内容简介f容简介内容简介内容简介内容简介f"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_book_meta_data_more_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="更多"/>


            </com.zhy.android.percent.support.PercentLinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/ll_intercept_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cv_book_meta_header"
            android:layout_marginTop="20dp"
            android:background="#00f"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_below="@id/cv_book_meta_header"
            android:layout_marginTop="30dp"
            android:background="#9B704A"/>
        <!--app:layout_heightPercent="4%w"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_book_meta_header"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/bookshelf_book_summary"
            android:textColor="@color/bookshelf_title_text_color"
            android:textStyle="bold"
            />

    </RelativeLayout>


</com.zhy.android.percent.support.PercentFrameLayout>